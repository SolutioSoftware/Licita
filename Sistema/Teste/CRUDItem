package com.example.tests;

import java.util.regex.Pattern;
import java.util.concurrent.TimeUnit;
import org.junit.*;
import static org.junit.Assert.*;
import static org.hamcrest.CoreMatchers.*;
import org.openqa.selenium.*;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.openqa.selenium.support.ui.Select;

public class CRUDItem {
  private WebDriver driver;
  private String baseUrl;
  private boolean acceptNextAlert = true;
  private StringBuffer verificationErrors = new StringBuffer();

  @Before
  public void setUp() throws Exception {
    driver = new FirefoxDriver();
    baseUrl = "http://localhost:8084/";
    driver.manage().timeouts().implicitlyWait(30, TimeUnit.SECONDS);
  }

  @Test
  public void testCRUDItem() throws Exception {
    driver.get(baseUrl + "/Licita/restrito/login/login.xhtml");
    driver.findElement(By.id("j_idt9:campo_login")).clear();
    driver.findElement(By.id("j_idt9:campo_login")).sendKeys("admin");
    driver.findElement(By.id("j_idt9:campo_senha")).clear();
    driver.findElement(By.id("j_idt9:campo_senha")).sendKeys("admin");
    driver.findElement(By.id("j_idt9:j_idt16")).click();
    driver.findElement(By.id("bt_itens")).click();
    // ERROR: Caught exception [ERROR: Unsupported command [waitForPopUp | _self | 30000]]
    driver.findElement(By.id("formDtItemPregao:dt_itens:j_idt20")).click();
    driver.findElement(By.id("itemPregao_form:nome")).clear();
    driver.findElement(By.id("itemPregao_form:nome")).sendKeys("choc");
    driver.findElement(By.id("itemPregao_form:quantidade_input")).clear();
    driver.findElement(By.id("itemPregao_form:quantidade_input")).sendKeys("10");
    new Select(driver.findElement(By.id("itemPregao_form:unidade"))).selectByVisibleText("Unidade");
    driver.findElement(By.id("itemPregao_form:descricao")).clear();
    driver.findElement(By.id("itemPregao_form:descricao")).sendKeys("do bom");
    driver.findElement(By.id("itemPregao_form:btSalvarItemPregao")).click();
    driver.findElement(By.id("itemPregao_form:valorDeReferencia_input")).clear();
    driver.findElement(By.id("itemPregao_form:valorDeReferencia_input")).sendKeys("10");
    driver.findElement(By.id("itemPregao_form:btSalvarItemPregao")).click();
    driver.findElement(By.id("formDtItemPregao:dt_itens:0:btEditar")).click();
    for (int second = 0;; second++) {
    	if (second >= 60) fail("timeout");
    	try { if (!"chocolate".equals(driver.findElement(By.id("itemPregao_form:nome")).getText())) break; } catch (Exception e) {}
    	Thread.sleep(1000);
    }

    driver.findElement(By.id("itemPregao_form:btAtualizarItem")).click();
    driver.findElement(By.id("formDtItemPregao:dt_itens:0:btExcluir")).click();
    driver.findElement(By.id("j_idt31:j_idt34")).click();
    driver.findElement(By.id("j_idt13:bot_sair")).click();
  }

  @After
  public void tearDown() throws Exception {
    driver.quit();
    String verificationErrorString = verificationErrors.toString();
    if (!"".equals(verificationErrorString)) {
      fail(verificationErrorString);
    }
  }

  private boolean isElementPresent(By by) {
    try {
      driver.findElement(by);
      return true;
    } catch (NoSuchElementException e) {
      return false;
    }
  }

  private boolean isAlertPresent() {
    try {
      driver.switchTo().alert();
      return true;
    } catch (NoAlertPresentException e) {
      return false;
    }
  }

  private String closeAlertAndGetItsText() {
    try {
      Alert alert = driver.switchTo().alert();
      String alertText = alert.getText();
      if (acceptNextAlert) {
        alert.accept();
      } else {
        alert.dismiss();
      }
      return alertText;
    } finally {
      acceptNextAlert = true;
    }
  }
}
