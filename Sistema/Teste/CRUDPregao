package com.example.tests;

import java.util.regex.Pattern;
import java.util.concurrent.TimeUnit;
import org.junit.*;
import static org.junit.Assert.*;
import static org.hamcrest.CoreMatchers.*;
import org.openqa.selenium.*;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.openqa.selenium.support.ui.Select;

public class CRUDPregao {
  private WebDriver driver;
  private String baseUrl;
  private boolean acceptNextAlert = true;
  private StringBuffer verificationErrors = new StringBuffer();

  @Before
  public void setUp() throws Exception {
    driver = new FirefoxDriver();
    baseUrl = "http://localhost:8084/";
    driver.manage().timeouts().implicitlyWait(30, TimeUnit.SECONDS);
  }

  @Test
  public void testCRUDPregao() throws Exception {
    driver.get(baseUrl + "/Licita/restrito/login/login.xhtml");
    driver.findElement(By.id("j_idt9:campo_login")).clear();
    driver.findElement(By.id("j_idt9:campo_login")).sendKeys("admin");
    driver.findElement(By.id("j_idt9:campo_senha")).clear();
    driver.findElement(By.id("j_idt9:campo_senha")).sendKeys("admin");
    driver.findElement(By.id("j_idt9:j_idt16")).click();
    driver.findElement(By.id("bt_pregoes")).click();
    // ERROR: Caught exception [ERROR: Unsupported command [waitForPopUp | _self | 30000]]
    driver.findElement(By.id("formDtPregao:dt_pregoes:j_idt20")).click();
    driver.findElement(By.id("pregao_form:numeroProcesso")).clear();
    driver.findElement(By.id("pregao_form:numeroProcesso")).sendKeys("99");
    driver.findElement(By.id("pregao_form:numeroPregao")).clear();
    driver.findElement(By.id("pregao_form:numeroPregao")).sendKeys("99");
    new Select(driver.findElement(By.id("pregao_form:statusDoPregao"))).selectByVisibleText("Conclu√≠do COM Recurso");
    driver.findElement(By.cssSelector("option[value=\"comRecurso\"]")).click();
    driver.findElement(By.id("pregao_form:descricao")).clear();
    driver.findElement(By.id("pregao_form:descricao")).sendKeys("deixa essa porra em branco mesmo");
    driver.findElement(By.id("pregao_form:btSalvarPregao")).click();
    driver.findElement(By.id("formDtPregao:dt_pregoes:0:btExcluir")).click();
    driver.findElement(By.id("j_idt31:j_idt34")).click();
    driver.findElement(By.id("formDtPregao:dt_pregoes:j_idt20")).click();
    driver.findElement(By.id("pregao_form:numeroProcesso")).clear();
    driver.findElement(By.id("pregao_form:numeroProcesso")).sendKeys("101");
    driver.findElement(By.id("pregao_form:numeroPregao")).clear();
    driver.findElement(By.id("pregao_form:numeroPregao")).sendKeys("101");
    new Select(driver.findElement(By.id("pregao_form:statusDoPregao"))).selectByVisibleText("Aberto");
    driver.findElement(By.cssSelector("option[value=\"aberto\"]")).click();
    driver.findElement(By.id("pregao_form:descricao")).clear();
    driver.findElement(By.id("pregao_form:descricao")).sendKeys("1");
    driver.findElement(By.id("pregao_form:btSalvarPregao")).click();
    driver.findElement(By.id("formDtPregao:dt_pregoes:0:btEditar")).click();
    driver.findElement(By.id("pregao_form:numeroProcesso")).clear();
    driver.findElement(By.id("pregao_form:numeroProcesso")).sendKeys("102");
    driver.findElement(By.id("pregao_form:btAtualizarPregao")).click();
    driver.findElement(By.id("formDtPregao:dt_pregoes:j_idt20")).click();
    driver.findElement(By.id("pregao_form:numeroProcesso")).clear();
    driver.findElement(By.id("pregao_form:numeroProcesso")).sendKeys("102");
    driver.findElement(By.id("pregao_form:numeroPregao")).clear();
    driver.findElement(By.id("pregao_form:numeroPregao")).sendKeys("102");
    new Select(driver.findElement(By.id("pregao_form:statusDoPregao"))).selectByVisibleText("Aberto");
    driver.findElement(By.cssSelector("option[value=\"aberto\"]")).click();
    driver.findElement(By.id("pregao_form:btSalvarPregao")).click();
    driver.findElement(By.id("pregao_form:numeroProcesso")).clear();
    driver.findElement(By.id("pregao_form:numeroProcesso")).sendKeys("104");
    driver.findElement(By.id("pregao_form:btSalvarPregao")).click();
    driver.findElement(By.id("j_idt13:bot_sair")).click();
  }

  @After
  public void tearDown() throws Exception {
    driver.quit();
    String verificationErrorString = verificationErrors.toString();
    if (!"".equals(verificationErrorString)) {
      fail(verificationErrorString);
    }
  }

  private boolean isElementPresent(By by) {
    try {
      driver.findElement(by);
      return true;
    } catch (NoSuchElementException e) {
      return false;
    }
  }

  private boolean isAlertPresent() {
    try {
      driver.switchTo().alert();
      return true;
    } catch (NoAlertPresentException e) {
      return false;
    }
  }

  private String closeAlertAndGetItsText() {
    try {
      Alert alert = driver.switchTo().alert();
      String alertText = alert.getText();
      if (acceptNextAlert) {
        alert.accept();
      } else {
        alert.dismiss();
      }
      return alertText;
    } finally {
      acceptNextAlert = true;
    }
  }
}
